{
  "manifest_version": 3,
  "name": "Sovereign Shield",
  "version": "1.0",
  "description": "Adversarial Interoperability Tool dedicated to countering algorithmic predation on human attention. In memory of [Daughter's Name].",
  "permissions": [
    "activeTab",
    "storage",
    "webRequest",
    "webRequestBlocking"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}